enum class Colors (var colorHex: String, val opacity: Double? = 1.0) {   // enum - перечисление
    // первая перменная- код цвета, вторая переменная - прозрачность, по умолчанию 1, можно изменять


    white("#0000"), // в скобочках - переменная, обозначает цвет
    black("1111"),
    red("2222", 0.5),
    green("FFFF");

    fun some() {

        println("логика")
    } // метод
}
