//функции
fun main(args: Array<String>) { //точка входа

    FUN2(1);// вызов функции
    val result = FUN4(2,2.4);
println(result);
}
fun FUN(): Int {
    return 1 // возвращаемое значение
} // функция, в скобках - параметры,после: - тип возвращаемого значения
fun FUN2(a: Long): Int { // в скобках - принимает значение а
return a.toInt();
}
fun FUN3() { // метод не будет возвращать значения (войд - неопр. тип данных)

}
fun FUN4(a:Long, b:Double) = a + b
